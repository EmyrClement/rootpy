

    tau_author:
        type: int
        default: -1111
        range: 0,2
        fancy: #font[52]{Author}
        alias: author
    tau_numTrack
        type: int
        default: -1111
        range: 0,4
        fancy: ##font[52]{Track}
        alias: numTrack
    <variable name="tau_eta" type="float" default="-1111">
        <range value="-2.5,2.5"/>
        <fancy value="#font[152]{#eta}"/>
        <alias value="eta"/>
    <variable name="tau_phi" type="float" default="-1111">
        <range value="-3.14159,3.14159"/>
        <fancy value="#font[152]{#phi}"/>
        <alias value="phi"/>
    <variable name="tau_Et" type="float" default="-1111">
        <range value="0,100"/>
        <fancy value="#font[52]{E}_{T}"/>
        <units value="GeV"/>
        <alias value="et"/>
    <variable name="tau_charge" type="int" default="-1111">
        <prongs value="1,3"/>
        <range value="-4,4"/>
        <fancy value="charge"/>
        <alias value="charge"/>
    </variable>
    <variable name="tau_seedCalo_EMRadius" type="float" default="-1111">
        <authors value="1,3"/>
        <prongs value="1,3"/>
        <range value="0,0.3"/>
        <fancy value="#font[52]{R}_{EM}"/>
        <alias value="emRadius"/>
    </variable>
    <variable name="tau_seedCalo_hadRadius" type="float" default="-1111">
        <authors value="1,3"/>
        <prongs value="1,3"/>
        <range value="0,0.3"/>
        <fancy value="#font[52]{R}_{Had}"/>
        <alias value="hadRadius"/>
    </variable>
    <variable name="tau_seedCalo_isolFrac" type="float" default="-1111">
        <authors value="1,3"/>
        <prongs value="1,3"/>
        <range value="0,1"/>
        <fancy value="#font[52]{F}_{ring}"/>
        <alias value="isolFrac"/>
    </variable>
    <variable name="tau_seedCalo_centFrac" type="float" default="-1111">
        <authors value="1,3"/>
        <prongs value="1,3"/>
        <range value="0,1"/>
        <fancy value="#font[52]{F}_{core}"/>
        <alias value="centFrac"/>
    </variable>
    <variable name="tau_etOverPtLeadTrk" type="float" default="-1111">
        <authors value="1,3"/>
        <prongs value="1,3"/>
        <range value="0,6"/>
        <fancy value="#font[52]{E}_{T}/#font[52]{p}_{1T}"/>
        <alias value="EToverpTLeadTrk"/>
    </variable>
    <variable name="tau_massTrkSys" type="float" default="-1111">
        <authors value="1,3"/>
        <prongs value="3"/>
        <range value="0,3"/>
        <fancy value="#font[52]{M}_{trk}"/>
        <units value="GeV"/>
        <alias value="massTrkSys"/>
    </variable>
    <variable name="tau_seedCalo_trkAvgDist" type="float" default="-1111">
        <authors value="1,3"/>
        <prongs value="1,3"/>
        <range value="0,0.4"/>
        <fancy value="&lt;#Delta#font[52]{R}_{trk}&gt;"/>
        <alias value="trkAvgDist"/>
    </variable>
    <variable name="tau_calcVars_emFracAtEMScale" type="float" default="-1111">
        <authors value="1,3"/>
        <prongs value="1,3"/>
        <range value="0,1"/>
        <fancy value="#font[52]{F}_{EM}"/>
        <alias value="EMFractionEMScale"/>
    </variable>
    <variable name="tau_calcVars_topoInvMass" type="float" default="-1111">
        <authors value="1,3"/>
        <prongs value="1,3"/>
        <range value="0,3"/>
        <fancy value="#font[52]{M}_{topo}"/>
        <units value="GeV"/>
        <alias value="topoInvMass"/>
    </variable>
    <variable name="tau_nPi0" type="int" default="-1111">
        <authors value="3"/>
        <prongs value="1,3"/>
        <range value="0,8"/>
        <fancy value="##font[152]{#pi}^{0}"/>
        <alias value="nPi0"/>
    </variable>
    <!-- reco truth-matching variables -->
    <variable name="isTruthMatched" type="int" default="0">
    </variable>
    <variable name="nProngOfMatch" type="int" default="-1111">
    </variable>
    <variable name="EtOfMatch" type="float" default="-1111">
    </variable>
    <variable name="etaOfMatch" type="float" default="-1111">
    </variable><!-- truth tau truth-matching variables -->
    <variable name="tau_nProng" type="int" default="-1111">
    </variable>
    <!-- event variables -->
    <variable name="RunNumber" type="int" default="-1111">
        <alias value="run"/>
    </variable>
    <variable name="EventNumber" type="int" default="-1111">
        <alias value="event"/>
    </variable>
    <!-- discriminants -->
    <variable name="likelihood" type="float" default="-1111">
    </variable>
    <variable name="BDTJetScore" type="float" default="-1111">
    </variable>
</variables>
